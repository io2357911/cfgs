set vicmd=nvim

colorscheme molokai

map b :bmarks<CR>

command vim nvim

filetype *.jpg,*.jpeg,*.png,*.gif viewnior %f 2>/dev/null &
filetype *.mkv mpv %f 2>/dev/null &
filetype *.pdf zathura %f 2>/dev/null &
filetype *.fb2 FBReader %f 2>/dev/null &
filetype *.doc,*.docx,*.ods libreoffice %f 2>/dev/null &
filetype *.bin,*.gen mednafen %f 2>/dev/null &
